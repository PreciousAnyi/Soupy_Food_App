<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodDetailsActivity">


    <ImageView
        android:id="@+id/foodDetailsIV"
        android:layout_width="wrap_content"
        android:layout_height="429dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-95dp"
        android:src="@drawable/banga" />

    <TextView
        android:id="@+id/foodDetailsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="300dp"
        android:text="Banga Soup"
        android:textColor="?attr/food_name_color"
        android:textSize="25sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/foodDetailsPriceTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:textSize="19sp"
        android:textColor="?attr/food_price_color"
        android:layout_marginTop="340dp"
        android:layout_marginStart="10dp"
        android:text="N 1000" />

</RelativeLayout>