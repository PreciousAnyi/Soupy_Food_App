<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginVertical="16dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="?attr/card_background_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/food_image_view"
                android:layout_width="151dp"
                android:layout_height="168dp"
                android:scaleType="fitXY"
                android:src="@drawable/egusi" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Egusi Soup"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="?attr/food_name_color"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/food_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N 1000"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:textColor="?attr/food_price_color"
                    android:layout_marginStart="15dp"
                    />

            </LinearLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>




</LinearLayout>